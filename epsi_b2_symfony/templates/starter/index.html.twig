{% extends 'base.html.twig' %}

{% block title %}Chose your destiny!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">


    Bienvenue jeune dresseur!
    Souhaites-tu:
    <ul>
    {% for Pokemon in Pokemon %}
        <li>
            <td><a href="{{path('dashboard')}}" onclick="setStarter({{Pokemon.Name}})">{{ Pokemon.Name }}:</td>
            <ul>
            {% if Pokemon.Type == 1 %}
                <td>    Type: Feu </td>
            {% elseif Pokemon.Type == 2 %}
                <td> Type: Eau </td>
            {% elseif Pokemon.Type == 3 %}
                    <td>Type: Plante</td>
            {% elseif Pokemon.Type == 4 %}
                <td>Type: Normal</td>
            {% elseif Pokemon.Type == 5 %}
                <td> Type: Electrik</td>
            {% endif %}
                <td></td>
            </ul>
            {% for Attacc in Pokemon.Attacc %}
            <ul>
                <td>Attaque : {{ Attacc.Name }} </td>
            </ul>
            {% endfor %}
        </li>

    {% endfor %}
    </ul>
</div>
{% endblock %}
